<script>
document.addEventListener('DOMContentLoaded', function() {
  const tabButtons = document.querySelectorAll('.tab-buttons button');
  const tabPanels = document.querySelectorAll('.tab-panel');

  tabButtons.forEach(button => {
    button.addEventListener('click', () => {
      const tabId = button.getAttribute('data-tab');

      // Remove active from all
      tabButtons.forEach(b => b.classList.remove('active'));
      tabPanels.forEach(panel => panel.classList.remove('active'));

      // Activate current
      button.classList.add('active');
      document.getElementById(tabId).classList.add('active');
    });
  });
});

document.addEventListener("DOMContentLoaded", function () {
  const firstTabButton = document.querySelector(".products-tabs .tab-buttons li:first-child button");
  const firstTabPanel  = document.querySelector(".products-tabs .tab-panel:first-child");

  if (firstTabButton) firstTabButton.classList.add("active");
  if (firstTabPanel) firstTabPanel.classList.add("active");
});
</script>

