<div class="dare-to-be-true bg-overlay-bg" data-bg ="{{ section.settings.dare-to-be-true-bg | img_url: 'large'}}">    
    <div class="sec-inner">
        <div class="container">  
            <div class="marquee-wrap">
                <div class="marquee" style = "font-size:{{ section.settings.marquee-font-size }}px">
                    <div class="marquee-t">{{ section.settings.marquee-t-1}}</div>
                </div>          
                <div class="marquee marquee2">
                    <div class="marquee-t">{{ section.settings.marquee-t-2}}</div>
                </div>  
            </div>     
           {% comment %} 
            <div class="dare-to-be-true-bx background">
                <img src="{{ section.settings.dare-to-be-true-bx | img_url: 'large'}}" alt="">
            </div> 
          {% endcomment %}       
        </div>
    </div>
</div>
{% schema %}
  {
    "name": "Text Scroller",
    "settings": [
	  {
        "type": "image_picker",
        "id": "dare-to-be-true-bg",
        "label": "Background Image"
      },
	  {
        "type": "image_picker",
        "id": "dare-to-be-true-bx",
        "label": "Overlay Image"
      },
	  {
        "type": "text",
        "id": "marquee-t-1",
        "label": "Scrolling Text 1"
      },
      {
        "type":"select",
        "id": "marquee-font-size",
        "label":"Text Font Size",
        "default": "128",
        "options": [
              {
                "label": "Small",
                "value": "75"
              },
          {
                "label": "Medium",
                "value": "90"
              },
          {
                "label": "Large",
                "value": "128"
              }
        ]
      },
	  {
        "type": "text",
        "id": "marquee-t-2",
        "label": "Scrolling Text 2"
      }
],
  "presets": [
    {
      "name": "Text Scroller"
    }
  ]
  }
{% endschema %}

