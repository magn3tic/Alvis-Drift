<section class="awc-how-it-works">
  <div class="container">
    <div class="how-it-works-title">
      <h2 class="h1">{{ section.settings.how_it_works_title }}</h2>
      <p>{{ section.settings.how_it_works_text }}</p>
    </div>
    <div class="awc-how-it-works-benefits">
      <div class="benefits bronze-tier">
        <span class="awc-heading-xs">WINE CLUB</span>
        <h5 class="h1 whiteTitle">Bronze</h5>
        <figure>
          <img
            src="{{ section.settings.bronze_image | image_url }}"
            alt="Bronze Alvi's Drift Wine Club"
            width="200"
            height="200"
            class="awc-tier-badge" />
        </figure>
        <span>{{ section.settings.bronze_text }} Points</span>
        <ul>
          {% for block in section.blocks %}
            {% if block.type == 'bronze_benefit' %}
              <li>{{ block.settings.text }}</li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      <div class="benefits silver-tier">
        <span class="awc-heading-xs">WINE CLUB</span>
        <h5 class="h1 whiteTitle">SILVER</h5>
        <figure>
          <img
            src="{{ section.settings.silver_image | image_url }}"
            alt="Silver Alvi's Drift Wine Club"
            width="200"
            height="200"
            class="awc-tier-badge" />
        </figure>
        <span>{{ section.settings.silver_text }} Points</span>
        <ul>
          {% for block in section.blocks %}
            {% if block.type == 'silver_benefit' %}
              <li>{{ block.settings.text }}</li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      <div class="benefits gold-tier">
        <span class="awc-heading-xs">WINE CLUB</span>
        <h5 class="h1 whiteTitle">GOLD</h5>
        <figure>
          <img
            src="{{ section.settings.gold_image | image_url }}"
            alt="Gold Alvi's Drift Wine Club"
            width="200"
            height="200"
            class="awc-tier-badge" />
        </figure>
        <span>{{ section.settings.gold_text }} Points</span>
        <ul>
          {% for block in section.blocks %}
            {% if block.type == 'gold_benefit' %}
              <li>{{ block.settings.text }}</li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      {% if section.settings.display_platinum == true %}
      <div class="benefits platinum-tier">
        <span class="awc-heading-xs">WINE CLUB</span>
        <h5 class="h1 whiteTitle">Platinum</h5>
        <figure>
          <img
            src="{{ section.settings.platinum_image | image_url }}"
            alt="Platinum Alvi's Drift Wine Club"
            width="200"
            height="200"
            class="awc-tier-badge" />
        </figure>
        <span>{{ section.settings.platinum_text }} Points</span>
        <ul>
          {% for block in section.blocks %}
            {% if block.type == 'platinum_benefit' %}
              <li>{{ block.settings.text }}</li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    {% endif %}
    </div>
  </div>
</section>

