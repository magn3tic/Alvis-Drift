<section class="rewards-marquee-sec hm-marquee-wrap">
  {% if  section.settings.title_text != blank %}
  <h3 style="color:{{ section.settings.Heading_color }}">{{ section.settings.title_text }}</h3>
  {% endif %}
    <div class="rewards-marquee">
        <div class="rewards-img hm-marquee">
          
          {%- for block in section.blocks -%}
			
			{%- assign b_i = block.settings -%}
          
         <img src="{{b_i.logo_slider | img_url:'master'}}" width="150" height = "150" loading="lazy" alt="">
          
          {%- endfor -%}        
        </div>
    </div> 
</section>


<style>
 
   .js-marquee-wrapper{
    width: 100000px;
    transform: translateX(1280px);
    animation: 77.3266s linear 0s infinite normal none running marqueeAnimation-8937272;
  }

  
@media (max-width: 767px) {
  .hm-marquee,
  .marquee-imgs { white-space: nowrap; } 
  .hm-marquee .js-marquee,
  .marquee-imgs .js-marquee { margin-right: 24px; } 
  .hm-marquee img,
  .marquee-imgs img { height: 40px; }
}

.hm-marquee .js-marquee-wrapper { animation-iteration-count: infinite !important; }

  section.rewards-marquee-sec.hm-marquee-wrap h2 {
    font: normal 80px/100px var(--moriarty);
    letter-spacing: .8px;
    text-align: center;
    margin-bottom: 60px !important;
    float: left;
    width: 100%;
}

.js-marquee-wrapper {
  display: flex;
  align-items: center;
  flex-wrap: nowrap;     
  gap: 30px;            
  white-space: nowrap;   
}
.hm-marquee { overflow: hidden; line-height: 0; }

.hm-marquee .js-marquee-wrapper { 
  display: block;
  white-space: nowrap;
}

.hm-marquee .js-marquee {       
  display: inline-flex;         
  align-items: center;                 
  float: none !important;     
}

.hm-marquee img {
  display: inline-block;            
  width: auto;
  vertical-align: middle;
  margin: 0;
}
  
@media only screen and (max-width:500px) {
  /* For mobile phones: */
    .rewards-marquee-sec {
      text-align: center;
      padding: 30px;
  }
}
 
</style>

{% schema %}
  {
    "name": "Logos",
    "settings":[
	{
	"type":"text",
	"id":"title_text",
	"label":"Heading"
	}, 
	 {
            "type": "select",
            "id": "Heading_color",
            "label": "Heading Colour",
            "options": [
				{
                "value": "#f8f2e6",
                "label": "Light Beige"
              }, 
              {
                "value": "#ffffff",
                "label": "White"
              },
			  {
                "value": "#c0ccbe",
                "label": "Light Olive"
              },
              {
                "value": "#aac4d3",
                "label": "Light Blue"
              },
              {
                "value": "#fedcc6",
                "label": "Light Orange"
              }
            ],
            "default": "#f8f2e6"
          }
	],
    "blocks": [
      {
        "type": "item",
		"limit": 16,
        "name": "Logo",
        "settings": [
		  
          {
            "type": "image_picker",
            "id": "logo_slider",
            "label": "Upload Logo"
			
          },
		  {
            "type": "url",
            "id": "logo_link",
            "label": "Logo Link URL"
			
          }
		]
	  }
      
	],
    "presets": [
      {
        "name": "Logos",
      	"category": "Logo",
        "blocks": [
          {
            "type": "item"
          }
        ]
      }
    ]
  }
{% endschema %}
